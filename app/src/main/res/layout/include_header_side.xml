<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:clickable="true"
            android:scaleType="centerCrop" />

        <com.common.library.widget.CustomRadioGroup
            android:id="@+id/rg_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_local"
                style="@style/RadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb_net"
                style="@style/RadioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.common.library.widget.CustomRadioGroup>

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="我的收藏"
            android:textColor="@color/grey_7"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_largeimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="大图下载/查看"
            android:textColor="@color/textview_press_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_gif_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="GIF图片观赏"
            android:textColor="@color/textview_press_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_gif_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="本地GIF图片"
            android:textColor="@color/textview_press_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="京东商城"
            android:textColor="@color/textview_press_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="测试界面"
            android:textColor="@color/textview_press_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="二维码扫描"
            android:textColor="@color/textview_press_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_show_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="底部弹框"
            android:textColor="@color/textview_press_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_time_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:text="时间选择"
            android:textColor="@color/textview_press_bg"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_duration_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="16dp"
            android:text="时长选择"
            android:textColor="@color/textview_press_bg"
            android:textSize="15sp" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>