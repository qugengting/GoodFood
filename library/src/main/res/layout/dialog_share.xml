<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:background="@drawable/bg_share"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:id="@+id/layout_share_weixin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/share_width"
                android:layout_height="@dimen/share_width"
                android:layout_marginTop="@dimen/share_icon_margin_top"
                android:src="@drawable/ic_share_weixin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/share_text_margin_top"
                android:gravity="center_horizontal"
                android:text="微信"
                android:textColor="#777"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_share_ijomoo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/share_width"
                android:layout_height="@dimen/share_width"
                android:layout_marginTop="@dimen/share_icon_margin_top"
                android:src="@drawable/ic_share_ijomoo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/share_text_margin_top"
                android:gravity="center_horizontal"
                android:text="IJM"
                android:textColor="#777"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_share_sms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/share_width"
                android:layout_height="@dimen/share_width"
                android:layout_marginTop="@dimen/share_icon_margin_top"
                android:src="@drawable/ic_share_sms" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/share_text_margin_top"
                android:gravity="center_horizontal"
                android:text="短信"
                android:textColor="#777"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_share_clipboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/share_width"
                android:layout_height="@dimen/share_width"
                android:layout_marginTop="@dimen/share_icon_margin_top"
                android:src="@drawable/ic_share_clipboard" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/share_text_margin_top"
                android:gravity="center_horizontal"
                android:text="复制链接"
                android:textColor="#777"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_share_cancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="17sp" />
</LinearLayout>