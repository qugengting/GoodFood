<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 弹出框 -->
    <style name="dialogBaseTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="SingleLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">#eeeeee</item>
    </style>

    <style name="SingleVerticalLineStyle">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#eeeeee</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:background">@drawable/selector_radio_button_spec</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/selector_radio_button_spec</item>
    </style>
</resources>